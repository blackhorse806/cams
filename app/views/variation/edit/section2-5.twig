			html += '<td>' + (i + 1) + '</td>';
			html += '<td>' + data[i].name + '</td>';
			html += '<td>' + data[i].type + '</td>';
			html += '<td>' + data[i].length + '</td>';
			html += '<td>' + data[i].gi + '</td>';
			html += '<td>' + data[i].ulos + '</td>';
			html += '<td>' + data[i].weight + '%</td>';
			html += '<td>' + threshold + '</td>';
